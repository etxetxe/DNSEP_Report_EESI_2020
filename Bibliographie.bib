@book{bayard_hors-sujet_1996,
	address = {Paris},
	series = {Paradoxe},
	title = {Le hors-sujet: {Proust} et la digression},
	isbn = {978-2-7073-1577-9},
	shorttitle = {Le hors-sujet},
	abstract = {Proust est trop long. Tirant les conséquences de cette constatation qui décourage de nombreux lecteurs potentiels, ce livre se propose de réduire la Recherche en supprimant les digressions.
